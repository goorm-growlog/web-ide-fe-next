{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit",
    "source.removeUnusedImports.biome": "never",
    "source.sortImports.biome": "explicit",
    "source.addMissingImports.biome": "never",
    "source.sortClasses.biome": "explicit"
  },
  "biome.enable": true,
  "biome.lintOnSave": true,
  "biome.requireConfiguration": true,
  // Biome 확장 추가 설정 (자동 수정을 위해)
  "biome.unsafeWrites": true,
  "biome.applyUnsafe": true,
  "biome.lspBin": "npx",
  // TypeScript/JavaScript 설정
  "typescript.preferences.importModuleSpecifier": "shortest",
  "javascript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
}